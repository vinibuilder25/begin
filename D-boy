import random
import sys
import pygame

pygame.init()

widht = 1080
height = 600

screen = pygame.display.set_mode((widht,height))

game_over = False


while game_over == False:

    for event in pygame.event.get():
        print(event)
        if event.type == pygame.QUIT:
            sys.exit()
    
    player = pygame.draw.rect(screen,(255,0,0),(400,300,50,50))

    while True:
        pygame.display.update()
        
        pygame.display.update()    
    
    pygame.display.update()
